<%- include("../../partials/head.ejs")  %>
</head>
<body>
    <%- include("../../partials/alert.ejs")  %>
    <%- include("../../partials/header.ejs") %>
        <section id="all-menu">
            <div class="breadcrumb">
                <h1>MENUS & PRODUCTS</h1>
                <p><span>HOME</span> / MENU / ALL</p>
            </div>
        </section>

    </header>
    <!-- menu section -->
    <section id="menu">
        <div class="sm-heading">
            <span>MENU</span>
            <h1>CAFE ALL MENU</h1>
        </div>
        <div class="container-sm">
            <div class="full-row">
                <div class="single-menu">
                    <img src="/images/menu-1.png" alt="menu">
                    <div class="inner-section">
                        <span>American Roasted GREED</span>
                        <span>$11.00</span>
                    </div>
                </div>
                <div class="single-menu">
                    <img src="/images/menu-3.png" alt="menu">
                    <div class="inner-section">
                        <span>CAFÃˆ AU LAIT Coffee</span>
                        <span>$12.00</span>
                    </div>
                </div>
                <div class="single-menu">
                    <img src="/images/menu-2.png" alt="menu">
                    <div class="inner-section">
                        <span>Pure Roasted GREED</span>
                        <span>$8.20</span>
                    </div>
                </div>
                <div class="single-menu">
                    <img src="/images/menu-5.png" alt="menu">
                    <div class="inner-section">
                        <span>JAPANESE COFFEE GREED</span>
                        <span>$10.50</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-footer">
            <% if(user && user.role == "admin") { %> 
                <a href="/add/menu">Add Menu</a>
            <% } %> 
        </div>
    </section>

    <!-- add menu modal -->
    <div class="add-menu-modal">
        <div class="modal-wrapper">
            <form action="/menu/add-menu" class="modal-section" enctype="multipart/form-data" method="post">
                <div class="heading">
                    <h3>ADD PRODUCT</h3>
                    <span id="order-modal-close"><i class="bi bi-x-lg"></i></span>
                </div>
                <div class="modal-body">
                    <div class="prod-des">
                        <input type="file" name="menu" required>
                        <input name="addProductName" type="text" id="addProductName" placeholder="Enter product name" required >
                        <input name="addProductPrice" type="number" id="addProductPrice" placeholder="Enter product price" required >
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="ADD NOW">
                </div>
            </form>
        </div>
    </div>

    <%- include("../../partials/footer.ejs") %>
</body>
</html>