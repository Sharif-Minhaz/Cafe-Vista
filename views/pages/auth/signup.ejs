<%- include("../../partials/head.ejs")  %>
</head>
<body>
    <%- include("../../partials/header.ejs") %>
        <section id="auth" style="height: 126vh;">
            <form class="form" action="/auth/signup" method="post">
                <h2>SIGNUP</h2>
                <div class="input">
                    <div class="inputBox">
                        <label>Username</label>
                        <input type="text" name="text" placeholder="choose username"/>
                    </div>
                    <div class="inputBox">
                        <label>Email</label>
                        <input type="email" name="email" placeholder="example@xyz.com"/>
                    </div>
                    <div class="inputBox">
                        <label>Password</label>
                        <input type="password" name="password" placeholder="&#8226;&#8226;&#8226;&#8226;&#8226;&#8226;&#8226;"/>
                    </div>
                    <div class="inputBox">
                        <label>Confirm Password</label>
                        <input type="confirmPassword" name="confirmPassword" placeholder="&#8226;&#8226;&#8226;&#8226;&#8226;&#8226;&#8226;"/>
                    </div>
                    <div class="inputBox">
                        <input type="submit" value="Log In"/>
                    </div>
                </div>
                <p class="reminder">Already have an account? <a href="/auth/login">Login now</a></p>
            </form>
        </section>

    </header>

    <%- include("../../partials/footer.ejs") %>
</body>
</html>