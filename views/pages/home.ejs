                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- reservation -->
    <section id="reservation">
        <div class="container">
            <div class="full-row">
                <div class="location">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14607.599897019574!2d90.3842537968623!3d23.750946087692075!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b9ffa01d62cb%3A0x3ddc407248737a4e!2sCoffee%20Buzz!5e0!3m2!1sen!2sbd!4v1645867722596!5m2!1sen!2sbd" style="border:0;" loading="lazy" allowfullscreen="true"></iframe>
                </div>
                <div class="reservation-input">
                    <div class="sm-heading">
                        <span>RESERVATION</span>
                    </div>
                    <h1>BOOKING A TABLE</h1>
                    <form action="/reservation/table" method="post">
                        <div class="single-box">
                            <input type="number" name="person" placeholder="Person" required>
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="single-box">
                            <input name="date" type="date" required>
                        </div>
                        <div class="single-box">
                            <input name="time" type="time" required>
                        </div>
                        <input type="submit" value="BOOK A TABLE">
                    </form>
                </div>
            </div>
        </div>
