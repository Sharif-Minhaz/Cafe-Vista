    <!-- buy coffee machine -->
    <div class="coffee-modal">
        <div class="modal-wrapper coffee-modal-wrapper">
            <div class="modal-section coffee-modal-section">
                <div class="heading">
                    <h3>ORDER NOW!</h3>
                    <span id="order-modal-close-machine"><i class="bi bi-x-lg"></i></span>
                </div>
                <div class="modal-body-machine">
                    <div class="prod-img-machine">
                        <img id="prod-img" src="/images/product-big.png" alt="prod-img">
                    </div>
                    <div class="prod-des">
                        <h3>COFFEE MACHINE FOR HOME</h3>
                        <p id="price-machine">$150.00</p>
                        <div class="inc-dec-machine">
                            <span id="min"> - </span>
                            <span id="count-res"> 1 </span>
                            <span id="inc"> + </span>
                        </div>
                    </div>
